compound_command : pipeline '&&'  compound_command
                 | pipeline '||'  compound_command
                 | pipeline
                 ;
pipeline         : command '|'  pipeline
                 | command
                 ;
command          : subshell
                 | simple_command
                 ;
subshell         : '(' compound_command ')' redirect_list*
                 ;
simple_command   : io_redirect simple_command
                 | io_redirect
                 | WORD        simple_command
                 | WORD
                 ;
redirect_list    : io_redirect redirect_list*
                 ;
io_redirect      : '<'     WORD(filename)
                 | '>'     WORD(filename)
                 | '>>'    WORD(filename)
                 | '<<'    WORD
                 ;